<script lang="js">
  const listItems = document.querySelectorAll(".list_item-click");

  listItems.forEach((listItem) => {
    listItem.addEventListener("mouseover", () => {
      listItem.querySelector(".list_show").style.maxHeight = "1000px";
    });

    listItem.addEventListener("mouseout", () => {
      listItem.querySelector(".list_show").style.maxHeight = "0";
    });
  });
</script>
